// MODALS
// ------

// Recalculate z-index where appropriate
.modal-open
	.dropdown-menu
		z-index 					$zindexDropdown + $zindexModal
	.dropdown.open
		*z-index 					$zindexDropdown + $zindexModal
	.popover
		z-index 					$zindexPopover  + $zindexModal
	.tooltip
		z-index 					$zindexTooltip  + $zindexModal

// Background
.modal-backdrop
	background-color 				$black
	background 						$black url(../images/loading.gif) no-repeat 50% 20%
	bottom 							0
	left 							0
	position 						fixed
	right 							0
	top 							0
	z-index 						$zindexModalBackdrop
	// Fade for backdrop
	&.fade
		opacity 					0

.modal-backdrop,
.modal-backdrop.fade.in
	$opacity(80)

// Base modal
.modal
	$box-shadow(0 3px 7px rgba(0,0,0,0.3))
	
	max-width 						100%
	max-height 						100%
	left 							2%
	overflow 						auto
	position 						fixed
	top 							$gridGutterWidth
	width 							96%
	z-index 						$zindexModal

	@media $lap-and-desk
		left 						25%
		width 						50%

	&.fade
		$transition2(opacity .3s linear, top .3s ease-out)
		top 						-25%

	&.fade.in
		top 						50%

.modal-header
	border-bottom 					1px solid #eee
	padding 						9px 15px
	
	// Close icon
	.close
		margin-top 					2px

// Body (where all modal content resises)
.modal-body
	padding 						15px

// Remove bottom margin if need be
.modal-body .modal-form
	margin-bottom 					0

// Footer (for actions)
.modal-footer
	background-color 				#f5f5f5
	border-top 						1px solid #ddd
	$border-radius(0 0 6px 6px)
	$box-shadow(inset 0 1px 0 $white)
	margin-bottom 					0
	padding 						14px 15px 15px
	
	
	$clearfix()
	.btn
		float 						right
		margin-left 				5px
		margin-bottom 				0 // account for input[type="submit"] which gets the bottom margin like all other inputs